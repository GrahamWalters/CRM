<%= bootstrap_form_for(address, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <% if address.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</strong>
        <ul>
        <% address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
    </div>
  <% end %>

  <%= f.text_field :label %>

  <%= f.text_field :address_1 %>

  <%= f.text_field :address_2 %>

  <%= f.text_field :city %>

  <%= f.text_field :state %>

  <%= f.text_field :zip %>

  <%= f.text_field :country %>

  <%= f.text_field :customer_id %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>
