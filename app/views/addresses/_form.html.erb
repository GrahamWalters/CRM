<%= bootstrap_form_for([customer, address], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <% if address.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</strong>
        <ul>
        <% address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
    </div>
  <% end %>

  <%= f.text_field :label %>

  <%= f.text_field :address_1 %>

  <%= f.text_field :address_2 %>

  <%= f.text_field :city %>

  <%= f.text_field :state %>

  <%= f.text_field :zip %>

  <%= f.text_field :country %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>

      <%= link_to('Destroy', customer_address_path(customer, address), :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } ) if !address[:id].nil? %>
    </div>
  </div>
<% end %>
